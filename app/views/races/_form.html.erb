    </div>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :starts_at %>
      <%= f.text_field :starts_at %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_field :description %>
